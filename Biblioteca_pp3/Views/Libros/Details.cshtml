@model Biblioteca_pp3.Models.Libro

@{
    ViewData["Title"] = "Detalles del Libro";
}

<h1>Detalles del Libro</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@(Model.Autor?.NombreCompleto ?? "Desconocido")</dd>

        <dt class="col-sm-2">Fecha de Publicación</dt>
        <dd class="col-sm-10">@Model.FechaPub.ToShortDateString()</dd>

        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.ISBN</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    <a asp-controller="Autores" asp-action="LibrosAutor" asp-route-id="@Model.AutorId" class="btn btn-primary">Ver todos los libros del autor</a>
</div>